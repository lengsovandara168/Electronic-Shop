---
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import '../styles/global.css';

export interface Props {
	title?: string;
}

const { title = 'ElectroMart' } = Astro.props;


---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/public/profile.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="min-h-screen flex flex-col font-sans bg-white text-gray-900 antialiased">
	
		<Header />
		<main class="flex-1 w-full">
			<slot />
		</main>
		<Footer />
	</body>
</html>

